mn":1,"offset":555},"end":{"line":10,"column":505,"offset":1059}}}],"position":{"start":{"line":10,"column":1,"offset":555},"end":{"line":10,"column":505,"offset":1059}}},{"type":"text","value":"\n"},{"type":"element","tagName":"h3","properties":{},"children":[{"type":"text","value":"The Downsides","position":{"start":{"line":12,"column":5,"offset":1065},"end":{"line":12,"column":18,"offset":1078}}}],"position":{"start":{"line":12,"column":1,"offset":1061},"end":{"line":12,"column":18,"offset":1078}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"element","tagName":"img","properties":{"src":"","alt":null},"children":[],"position":{"start":{"line":14,"column":1,"offset":1080},"end":{"line":14,"column":6,"offset":1085}}}],"position":{"start":{"line":14,"column":1,"offset":1080},"end":{"line":14,"column":6,"offset":1085}}},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Yes, there are always downsides in life and this is no exception. While the framwork is great, it does require a knowledge of both React and GraphQL. But hey, if you haven’t learned those yet, it’s never too late to start.","position":{"start":{"line":16,"column":1,"offset":1087},"end":{"line":16,"column":223,"offset":1309}}}],"position":{"start":{"line":16,"column":1,"offset":1087},"end":{"line":16,"column":223,"offset":1309}}}],"position":{"start":{"line":1,"column":1,"offset":0},"end":{"line":17,"column":1,"offset":1310}}}}